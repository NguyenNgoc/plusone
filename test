# compile lda code
cd lib/lda-c-dist; make;

# compile using ant
cd -; ant -f build.xml;

set data = "med.out.1";
#set data = "test.5000.data";

# download test.data if it doesn't exist

if (!(-f /tmp/$data.`whoami`)) then
   cd /tmp/
   wget http://inst.eecs.berkeley.edu/~darrenk/$data --output-document=$data.`whoami`   
   cd -
endif

# options to sample cpu
# -agentlib:hprof=cpu=samples
# -agentlib:hprof=heap=sites

# options for memory
# -Xmx4096m

java -Xmx4096m -cp Plusone.jar:lib/jars/ejml-0.17.jar plusone.Main experiment_old /tmp/$data.`whoami` 0.8
