#!/bin/csh

setenv basedir $PWD

# compile lda code
cd lib/lda-c-dist; make || exit

# compile using ant
cd $basedir; ant -f build.xml || exit

# download test.data if it doesn't exist

if (!(-f /tmp/test.5000.data)) then
   cd /tmp/
   wget http://inst.eecs.berkeley.edu/~darrenk/test.5000.data
   cd $basedir
endif

mkdir -p experiment

